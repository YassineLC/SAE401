<resources>
    <!-- Base application theme. -->
    <style name="Theme.Explorer" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <!-- Custom TextView style -->
    <style name="AlkhemikalFontTextView" parent="TextAppearance.AppCompat">
        <item name="fontFamily">@font/alkhemikal</item>
        <item name="android:textSize">16sp</item>
    </style>
</resources>